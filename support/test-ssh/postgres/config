# General settings for all hosts
Host *
    PasswordAuthentication no
    ChallengeResponseAuthentication no
    PubkeyAuthentication yes
    IdentityFile ~/.ssh/id_ed25519

# Specific settings for 'postgres' host
Host pgbackrest
    HostName pgbackrest
    User pgbackrest
    IdentityFile ~/.ssh/id_ed25519
    StrictHostKeyChecking no