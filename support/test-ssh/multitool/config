# SSHD configuration settings
Host *
    PermitRootLogin yes
    PasswordAuthentication no
    ChallengeResponseAuthentication no
    UsePAM yes
    PubkeyAuthentication yes
    AuthorizedKeysFile /home/root/.ssh/authorized_keys

# Specific settings for 'postgres' host
Host pgbackrest
    StrictHostKeyChecking no
    IdentityFile /home/root/.ssh/id_ed25519
    User pgbackrest
    AllowUsers pgbackrest
